<div id="sharingbox" tal:define="form nocall:view/form_instance; widgets form/widgets" tal:condition="form">

  <form id="sharingbox-form" action="" method="post" accept-charset="utf-8"
      tal:attributes="name    form/name;
                      action  form/action;
                      method  form/method;
                      enctype form/enctype;">
    <fieldset id="sharingbox-fieldset-features">
        <label for="sharingbox-features-title">Create a Thread</label>
        <input type="checkbox" id="sharingbox-features-title" name="sharingbox-features-title"/>
        <label for="sharingbox-features-event">Create an Event</label>
        <input type="checkbox" id="sharingbox-features-event" name="sharingbox-features-event"/>
        <label for="sharingbox-features-location">Create a Location</label>
        <input type="checkbox" id="sharingbox-features-location" name="sharingbox-features-location"/>
    </fieldset>

    <fieldset id="sharingbox-fieldset-title">
      <label for="sharingbox-title">Titel deines Beitrags</label>
      <input type="text" name="sharingbox-title" id="sharingbox-title" value="" placeholder="share some content with us!" />
    </fieldset>

    <fieldset id="sharingbox-fieldset-text">
      <input type="hidden" name="form.widgets.IRichText.text.mimeType" value="text/html"/>`    <input type="hidden" name="form.widgets.IRichText.text.mimeType" value="text/html"/>
      <textarea name="sharingbox-text" id="sharingbox-text" rows="8" cols="40"
          tal:attributes="name widgets/IRichText.text/name"><tal:txt replace="widgets/IRichText.text/value/output|nothing"><h1>lemme see</h1><p>nothing special</p></tal:txt></textarea>
    </fieldset>

    <div id="sharingbox-facade">
      <button id="sharingbox-facade-bold">Bold</button>
      <button id="sharingbox-facade-italic">Italic</button>
      <div id="sharingbox-facade-content" contenteditable="true">
        <h1>test contenteditable</h1>
        <p>somthin</p>
      </div>
    </div>

    <fieldset id="sharingbox-fieldset-event">
      <div id="sharingbox-widget-start">
        <label for="sharingbox-date-start">Start Date</label>
        <input type="date" id="sharingbox-date-start" name="sharingbox-date-start" value="" placeholder="YYYY-MM-DD"/>
        <label for="sharingbox-time-start">Start Time</label>
        <input id="sharingbox-time-start" name="sharingbox-time-start" value="" placeholder="HH:MM"/>
      </div>
      <div id="sharingbox-widget-date-end">
        <label for="sharingbox-date-end">End Date</label>
        <input type="date" name="sharingbox-date-end" id="sharingbox-date-end" value="" placeholder="YYYY-MM-DD"/>
        <label for="sharingbox-time-end">End Time</label>
        <input id="sharingbox-time-end" name="sharingbox-time-end" value="" placeholder="HH:MM"/>
      </div>
      <div id="sharingbox-widget-whole-day">
        <label for="sharingbox-whole-day">Whole Day</label>
        <input type="checkbox" id="sharingbox-whole-day" name="sharingbox-whole-day"/>
      </div>
      <div id="sharingbox-widget-recurrence">
        <label for="sharingbox-recurrence">Recurrence</label>
        <textarea id="sharingbox-recurrence" name="sharingbox-recurrence" rows="3" cols="10"></textarea>
      </div>
      <div id="sharingbox-widget-location">
        <label for="sharingbox-location">Location</label>
        <input type="text" name="sharingbox-location" id="sharingbox-location" value="" placeholder="Location"/>
      </div>
      <div id="sharingbox-widget-organizer">
        <label for="sharingbox-organizer">Organizer</label>
        <input type="text" name="sharingbox-organizer" id="sharingbox-organizer" value="" placeholder="Organizer"/>
      </div>
    </fieldset>

    <fieldset id="sharingbox-fieldset-location">
      <label for="sharingbox-location-name">Name der Location</label>
      <input type="text" name="sharingbox-location-name" id="sharingbox-location-name" value="" placeholder="Name of the location" />
      <label for="sharingbox-location-address">Address of the Location</label>
      <input type="text" name="sharingbox-location-address" id="sharingbox-location-address" value="" placeholder="Address of the location" />
    </fieldset>

    <input type="submit" value="Save" name="form.buttons.save"/>
    <input type="submit" value="Cancel" name="form.buttons.cancel"/>

  </form>

</div>
