<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      i18n:domain="g24.elements">
      <metal:use-macro="context/main_template/macros/master">
<body>

<metal:content-core fill-slot="content-core">
  <metal:content-core define-macro="content-core">

  <tal:items tal:define="items view/items" repeat="item items">
    <article tal:define="obj item/getObject;
                         base_url item/getURL">
      <header>
        <h1>
          <a href="" tal:attributes="href string:${base_url}/thread" tal:content="item/Title">Title</a>
        </h1>
      </header>
      <p tal:replace="structure obj/text/output|nothing">Text</p>

      <footer>
        <a href="" tal:attributes="href string:?user=${item/Creator}" tal:content="item/Creator">Creator</a><br/>
        <tal:tags repeat="tag item/Subject">
          <a href="" tal:attributes="href string:?tag=${tag}" tal:content="tag">Tag</a><br/>
        </tal:tags>
      </footer>
      <em tal:content="item/created"/><br/>
    </article>
  </tal:items>

  </metal:content-core>
</metal:content-core>

</body>
</html>
