<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="g24.elements">

    <browser:resourceDirectory
        name="resources"
        directory="resources"
        layer="g24.elements.interfaces.IG24Elements"
        />

    <browser:page
        for="g24.elements.content.IBasetype"
        name="sharingbox"
        class=".sharingbox.SharingBoxAddFormViewFrameless"
        permission="zope2.View"
        layer="g24.elements.interfaces.IG24Elements"
        />

    <browser:page
        for="g24.elements.content.IBasetype"
        name="sharingbox_edit"
        class=".sharingbox.SharingBoxEditFormViewFrameless"
        permission="zope2.View"
        layer="g24.elements.interfaces.IG24Elements"
        />

</configure>
